{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/.github": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "files.associations": {
    "*.js": "javascriptreact"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "npm.packageManager": "yarn"
}
